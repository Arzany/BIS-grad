    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <div class="submit">
            <h1 class="page-title">Dashboard</h1>
            <a href="c_submit_job.html" class="btn btn-primary">Submit New Job</a>

        </div>

        <div class="grid">
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-info">
                        <span>Posted Jobs</span>
                        <h3><%= jobsCount %></h3>
                    </div>
                    <div class="stat-icon">
                        <i class='bx bx-briefcase'></i>
                        <span class="icon">
                        </span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-info">
                        <span>Applications</span>
                        <h3><%= totalApplicants %></h3>
                    </div>
                    <div class="stat-icon">
                        <i class='bx bx-send'></i>
                        <span class="icon">
                        </span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-info">
                        <span>Pending</span>
                        <h3><%= pendingCount %></h3>
                    </div>
                    <div class="stat-icon">
                        <i class='bx bx-no-entry'></i>
                        <span class="icon">
                        </span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-info">
                        <span>Approved</span>
                        <h3><%= approvedCount %></h3>
                    </div>
                    <div class="stat-icon">
                        <i class='bx bx-smile'></i>
                        <span class="icon">
                        </span>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-info">
                        <span>Rejected</span>
                        <h3><%= rejectedCount %></h3>
                    </div>
                    <div class="stat-icon">
                        <i class='bx bx-sad'></i>
                        <span class="icon">
                        </span>
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <button class="btn-menu-dashboard">
                <strong>Menu</strong>
            </button>

            <div class="dashboard-header">
                <h3 class="dashboard-title">My Jobs</h3>

            </div>

            <div class="dashboard-card">
                <div class="job-tabs">
                    <ul class="tab-list" role="tablist">
                        <li class="tab-item active" role="presentation">
                            <button class="tab-btn" id="posted_jobs_tab" role="tab" aria-controls="posted_jobs"
                                aria-selected="true">Posted Jobs</button>
                        </li>
                    </ul>
                </div>

                <div class="job-filters">
                    <form class="search-form">
                        <input type="text" placeholder="Search by keyword" required>
                        <button type="submit">
                        </button>
                    </form>

                    <!-- <div class="select-wrapper">
                        <div class="select">
                            <span class="selected">Sort by (default)</span>
                            <ul class="options">
                                <li>sort by (default)</li>
                                <li>candidate name (a -> z)</li>
                                <li>candidate name (z -> a)</li>
                                <li>job title (a -> z)</li>
                                <li>job title (z -> a)</li>
                                <li>status (on hold)</li>
                                <li>status (interviewed)</li>
                                <li>status (rejected)</li>
                                <li>status (hired)</li>
                            </ul>
                        </div>
                        <span class="ph ph-caret-down"></span>
                    </div> -->
                </div>

                <!-- Posted Jobs Tab -->
                <div id="posted_jobs" class="tab-panel active" role="tabpanel" aria-labelledby="posted_jobs_tab">
                    <div class="job-table">
                        <table id="jobsTable">
                            <thead>
                                <tr>
                                    <th>My jobs</th>
                                    <th>Created & expiry</th>
                                    <th>Status</th>
                                    <th>Applicants</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% jobs.forEach(function(job) { %>
                                    <tr>
                                        <td>
                                            <a href="#">
                                                <strong>
                                                    <%= job.title %>
                                                </strong>
                                                <div class="job-location">
                                                    <span>
                                                        <%= job.location || '' %>
                                                    </span>
                                                </div>
                                            </a>
                                        </td>
                                        <td>
                                            <p>
                                                Created date:
                                                <%= job.createdAt ? job.createdAt.getDate() + '-' +
                                                    (job.createdAt.getMonth() + 1) + '-' + job.createdAt.getFullYear()
                                                    : '' %>
                                            </p>
                                            <p>
                                                Expiry date:
                                                <%= job.application_deadline ? job.application_deadline.getDate() + '-'
                                                    + (job.application_deadline.getMonth() + 1) + '-' +
                                                    job.application_deadline.getFullYear() : '' %>
                                            </p>
                                        </td>
                                        <td>
                                            <span class="status-tag published">
                                                <%= job.status || 'Published' %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/companyjobsview/<%= job.id %>" class="btn btn-outline">
                                                View Applicants (<%= job.dataValues.applicantsCount || 0 %>)
                                            </a>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <div class="tooltip-container">
                                                    <button class="action-btn view-job">
                                                        <i class='bx bx-low-vision'></i>
                                                        <span class="tooltip-text">View Job</span>
                                                    </button>
                                                </div>
                                                <div class="tooltip-container">
                                                    <a href="/companyeditjob/<%= job.id %>">
                                                        <button class="action-btn edit-job" type="button">
                                                            <i class='bx bx-edit-alt'></i>
                                                            <span class="tooltip-text">Edit Job</span>
                                                        </button>
                                                    </a>
                                                </div>
                                                <div class="tooltip-container">
                                                    <button class="action-btn delete" data-job-id="<%= job.id %>">
                                                        <i class='bx bx-message-square-x'></i>
                                                        <span class="tooltip-text">Delete</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Other tabs would go here -->

                <!-- <div class="table-footer">
                    <ul class="pagination">
                        <li><a href="#" class="active">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">></a></li>
                    </ul>
                    <p class="showing-info">Showing <span>1</span> to <span>6</span> of <span>24</span> entries</p>
                </div> -->
            </div>
        </div>

        <div class="dashboard-footer">
            <span class="copyright">EqualChance. All Rights Reserved</span>
        </div>
    </div>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
