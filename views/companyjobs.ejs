    <!-- Main Content Area -->
    <div class="main-content-area">
        <!-- Dashboard Main -->
        <div class="dashboard-main">
            <!-- Dashboard Menu -->
            <div class="dashboard-menu">
                <div class="menu-inner">

                    <div class="menu-area">
