<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company List</title>
    <link rel="shortcut icon" href="/images/fav.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/user-list.css">
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="header-inner">
            <div class="logo">
                <img src="/images/logoforallpages.png">
            </div>

            <div class="navigator">
                <ul class="nav-list">
                    <li><a href="/home">Home</a></li>
                    <li><a href="jobgridedit">Jobs</a></li>
                    <li><a href="/awareness">awareness</a></li>
                    <li><a href="/price">Payment</a></li>
                    <li><a href="/userlist">Applicants list</a></li>
                    <li><a href="/companylist">Companys list</a></li>
                </ul>
            </div>
            </nav>
            <a href="/companyprofile">
                <div class="user-actions">
                    <div class="user-profile">
                        <img src="/images/com. logo/mercedese.jpg" alt="Company's logo">
                        <span>MCV</span>
                    </div>
                </div>
            </a>
            <button class="mobile-menu-btn">â˜°</button>
        </div>
    </header>

    <!-- Breadcrumb -->
    <section class="breadcrumb">
        <div class="breadcrumb-bg"></div>
        <div class="breadcrumb-inner">
            <div class="breadcrumb-content">
                <h1>Companies List</h1>
                <form class="search-form" id="searchForm">
                    <div class="search-input">
                        <input type="text" id="searchInput" placeholder="Job title, key words or company">
                    </div>
                    <button type="submit" class="btn-primary">Search</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Candidates List -->
    <div class="candidates-container">
        <div class="candidates-filters">
            <div class="sort-options">
                <span>Sort by:</span>
                <select id="sortSelect">
                    <option value="default">Default</option>
                    <option value="newest">Newest</option>
                    <option value="oldest">Oldest</option>
                    <option value="rating">Highest Rating</option>
                    <option value="name-asc">Name (A-Z)</option>
                    <option value="name-desc">Name (Z-A)</option>
                </select>
            </div>
        </div>
        <!-- <div class="filter-tags">
            <span id="resultsCount">5 Results</span>
        </div> -->

        <div class="candidates-list" id="candidatesList">
            <% companies.forEach(function(company) { %>
                <div class="candidate-item" data-name="<%= company.name %>" data-title="<%= company.industry || '' %>"
                    data-company="<%= company.name %>"
                    data-date="<%= company.createdAt ? company.createdAt.toISOString().slice(0,10) : '' %>">
                    <div class="candidate-info">
                        <img src="/images/<%= company.logo || 'default.jpg' %>" alt="<%= company.name %>">
                        <div class="candidate-details">
                            <h3>
                                <%= company.name %>
                            </h3>
                            <span class="location">
                                <%= company.address || '' %>
                            </span>
                        </div>
                    </div>
                    <!-- <div class="profile-action">
                        <a href="/companyprofile/<%= company.id %>">
                            <button class="view-profile">View Profile</button>
                        </a>
                    </div> -->
                </div>
                <% }); %>
        </div>

        <!-- <div class="pagination">
            <button class="active">1</button>
            <button>2</button>
            <button>3</button>
            <button>></button>
        </div> -->
    </div>
    <script src="/js/users-list.js"></script>
</body>

</html>