    <!-- Apply Modal -->
    <div class="modal apply-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Apply Jobs</h3>
                <button class="close-modal"><i class="ph ph-x"></i></button>
            </div>
            <form class="modal-form" method="POST" action="/applyToJob" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="cover-letter">Cover letter <span>*</span></label>
                    <textarea name="cover_letter" id="cover-letter" rows="4" cols="50"
                        placeholder="Enter your cover letter" required></textarea>
                </div>
                <div class="form-group">
                    <label for="pdf-cv">CV <span>*</span></label>
                    <input type="file" id="pdf-cv" name="cv" accept=".pdf,.doc,.docx" required style="display:none;">
                    <label for="pdf-cv" class="custom-file-label">Choose File</label>
                    <span id="file-chosen" style="margin-left:10px;">No file chosen</span>
                </div>
                <input type="hidden" name="jobId" value="<%= job.id %>">
                <button type="submit" class="btn-primary">Apply Now</button>
            </form>
        </div>
    </div>

