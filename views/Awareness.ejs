            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .user-avatar:hover {
            border-color: #4ADF86;
            transform: scale(1.1);
        }

        /* Hero Section */
        .slider {
            width: 100%;
            overflow: hidden;
        }

        .slider_inner {
            position: relative;
            min-height: 600px;
            background-color: #1D3E3E;
            display: flex;
            align-items: center;
            padding: 0 5%;
        }

        .slider_bg {
            position: absolute;
            bottom: 0;
            right: 5%;
