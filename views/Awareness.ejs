            align-items: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .modal.open {
            display: flex;
            opacity: 1;
        }

        .modal_item {
            width: 90%;
            max-width: 900px;
            position: relative;
        }

        .modal_item iframe {
            width: 100%;
            height: 500px;
            border: none;
            border-radius: 8px;
