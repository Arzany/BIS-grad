    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Modal functionality
            const openModalButtons = document.querySelectorAll('.btn_open_popup');
            const closeModalButtons = document.querySelectorAll('.close_popup_btn');
            const modals = document.querySelectorAll('.modal');
            
            // Open modal
            openModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const modalId = button.getAttribute('data-video-id');
                    const modal = document.getElementById(modalId);
                    
                    // Close any open modals first
                    modals.forEach(m => {
                        m.classList.remove('open');
                        const iframe = m.querySelector('iframe');
                        if (iframe) {
                            const src = iframe.src;
                            iframe.src = '';
                            iframe.src = src; // Reset the iframe to stop video playback
                        }
                    });
                    document.body.classList.remove('scroll_locked');
                    
                    // Open the selected modal
                    modal.classList.add('open');
                    document.body.classList.add('scroll_locked');
                });
            });
            
            // Close modal
            closeModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const modal = button.closest('.modal');
                    const iframe = modal.querySelector('iframe');
                    if (iframe) {
                        const src = iframe.src;
                        iframe.src = '';
                        iframe.src = src; // Reset the iframe to stop video playback
                    }
                    modal.classList.remove('open');
                    document.body.classList.remove('scroll_locked');
                });
            });
            
            // Close modal when clicking outside content
            modals.forEach(modal => {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        const iframe = modal.querySelector('iframe');
                        if (iframe) {
                            const src = iframe.src;
                            iframe.src = '';
                            iframe.src = src; // Reset the iframe to stop video playback
                        }
                        modal.classList.remove('open');
                        document.body.classList.remove('scroll_locked');
                    }
                });
            });
            
            // Close modal with Escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    modals.forEach(modal => {
                        if (modal.classList.contains('open')) {
                            const iframe = modal.querySelector('iframe');
                            if (iframe) {
                                const src = iframe.src;
                                iframe.src = '';
                                iframe.src = src; // Reset the iframe to stop video playback
                            }
                            modal.classList.remove('open');
                            document.body.classList.remove('scroll_locked');
                        }
                    });
                }
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        const headerHeight = document.querySelector('.header').offsetHeight;
                        const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - headerHeight;
                        
                        window.scrollTo({
                            top: targetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Header scroll effect
            const header = document.querySelector('.header');
            let lastScroll = 0;
            
            window.addEventListener('scroll', () => {
                const currentScroll = window.pageYOffset;
                
                if (currentScroll <= 0) {
                    header.style.transform = 'translateY(0)';
                    return;
                }
                
                if (currentScroll > lastScroll && currentScroll > 100) {
                    // Scroll down
                    header.style.transform = 'translateY(-100%)';
                } else if (currentScroll < lastScroll) {
                    // Scroll up
                    header.style.transform = 'translateY(0)';
                }
                
                lastScroll = currentScroll;
            });
            
            // Animation on scroll
            function animateOnScroll() {
                const elements = document.querySelectorAll('.animate');
                
                elements.forEach(element => {
                    const elementPosition = element.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    
                    if (elementPosition < windowHeight - 100) {
                        const delay = element.getAttribute('style')?.match(/--i: (\d+)/)?.[1] * 0.1 || 0;
                        element.style.animation = `fadeInUp 0.5s ease-out ${delay}s forwards`;
                    }
                });
            }
            
            // Initial check and add scroll event listener
            animateOnScroll();
            window.addEventListener('scroll', animateOnScroll);
        });
    </script>
