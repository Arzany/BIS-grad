            <div class="tab-content" id="employer">
                <form id="employer-form">
                    <div class="form-group">
                        <label for="employer-email">Applicant email address</label>
                        <input type="email" id="employer-email" required placeholder="Email address">
                    </div>
                    <div class="form-group">
                        <label for="employer-password">Password</label>
                        <input type="password" id="employer-password" required placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="employer-confirm">Confirm password</label>
                        <input type="password" id="employer-confirm" required placeholder="Confirm password">
                    </div>
