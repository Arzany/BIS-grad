<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="shortcut icon" href="/images/fav.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/user-profile.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-inner">
            <div class="logo">
                <a href="#">
                    <img src="/images/logoforallpages.png" alt="EqualChance Logo" class="logo-white">
                </a>
            </div>
            
            <nav class="main-nav">
                <ul>
                   <li><a href="/home">Home</a></li>
                    <li><a href="/jobgridedit">Jobs</a></li>
                    <li><a href="/awareness">For You</a></li>
                    <li><a href="/price">Payment</a></li>
                </ul>
            </nav>
            <a href="/userprofile">
                <div class="user-actions">
                    <div class="user-profile">
                        <img src="/applicant-images/<%= applicant.image %>" alt="User profile">
                        <span><%= applicant.name %></span>
                        <i class="ph ph-caret-down"></i>
                    </div>
                 </div>
            </a>
            
            <button class="mobile-menu-btn"><i class="ph ph-list"></i></button>
        </div>
    </header>

    <!-- Dashboard Layout -->
    <div class="dashboard">
        <!-- Sidebar -->
        <aside class="sidebar">
            
            <div class="sidebar-section">
                <h4>Management</h4>
                <ul>
                    <li><a href="userapplied"><i class="ph-duotone ph-gavel">üìù</i> My Apllied</a></li>
                </ul>
            </div>
            
            <div class="sidebar-section">
                <h4>User</h4>
                <ul>
                    <li class="active"><a href="/userprofile"><i class="icon">üë§</i> My Profile</a></li>
                    <li><a href="/usersetting"><i class="icon">‚öôÔ∏è</i>Edit Profile</a></li>
                    <li><a href="/userchangepass"><i class="icon">üîì</i> Change Password</a></li>
                    <li><a href="/userdeleteprofile"><i class="icon">üóëÔ∏è</i> Delete Profile</a></li>
                    <li><a href="/home"><i class="icon">üö™</i> Log Out</a></li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-header">
                <h1 class="title">My profile</h1>
                <img src="/applicant-images/<%= applicant.image %>" class="profile_pic">
                <a href="/usersetting" class="btn-edit">Edit Profile </a>
            </div>
            
            <div class="profile-content">
                <!-- Left Column -->
                <div class="profile-left">
                    <!-- User Info -->
                    <div class="info-card">
                        <h2>ABOUT ME</h2>
                         
                        <ul class="info-list">
                            <li>
                                <span>Name:</span>
                                <strong><%= applicant.name %></strong>
                            </li>
                            <li>
                                <span>Age:</span>
                                <strong><%= applicant.age %></strong>
                            </li>
                            <li>
                                <span>Gender:</span>
                                <strong><%= applicant.gender %></strong>
                            </li>
                            <li>
                                <span>Email:</span>
                                <strong><%= applicant.user.email %></strong>
                            </li>
                            <li>
                            <span>Phone Number:</span>
                                <strong><%= applicant.phone %></strong>
                            </li>
                            <li>
                                <span>Address:</span>
                                <strong><%= applicant.address %></strong>
                            
                            </li>
                            <li>
                                <span>Languages:</span>
                                <strong><%= applicant.language %></strong>
                            </li>
                            <li>
                                <span>Education:</span>
                                <strong><%= applicant.education %></strong>
                            </li>
                            <li>
                                <span>Major:</span>
                                <strong><%= applicant.major %></strong>
                            </li>
                            <li>
                                <span>Type of disability:</span>
                                <strong><%= applicant.disability_type %></strong>
                            </li>
                        </ul>
                    </div>
                    <!-- Right Column -->
                <div class="profile-right">
                    <!-- About Me -->
                    <div class="exprience-card">
                        <h2>My Experience</h2>
                        <p><%= applicant.my_experience %></p>

                    </div>
        </div>
    </div>
    <script src="/js/user-profile.js"></script>
</body>
</html>