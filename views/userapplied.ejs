<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Applied Jobs</title>
    <link rel="stylesheet" href="/css/user-applied.css">
</head>

<body class="dashboard-page">
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <a href="index.html">
                    <img src="images/logo.jpg" alt="EqualChance Logo">
                </a>
            </div>

            <nav class="main-nav">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/jobgridedit">Jobs</a></li>
                    <li><a href="/awareness">For You</a></li>
                    <li><a href="/price">Payment</a></li>
                </ul>
            </nav>
            <a href="/userprofile">
                <div class="user-profile">
                    <img src="/images/u_profile/marina.jpg" alt="User profile">
                    <span>Marina</span>
                    <i class="ph-caret-down"></i>
                </div>
            </a>
        </div>

        <button class="mobile-menu-btn"><i class="ph-list"></i></button>
        </div>
    </header>

    <!-- Dashboard Main Content -->
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="dashboard-sidebar">

            <div class="sidebar-section">
                <h4>Management</h4>
                <ul>
                    <li class="active"><a href="#"><i class="ph-notepad">üìù</i> My Applied</a></li>
                </ul>
            </div>

            <div class="sidebar-section">
                <h4>User</h4>
                <ul>
                    <li><a href="/userprofile"><i class="ph-user-circle">üë§</i> My Profile</a></li>
                    <li><a href="/usersetting"><i class="ph-read-cv-logo">‚öôÔ∏è</i>Edit Profile</a></li>
                    <li><a href="/userchangepass"><i class="ph-lock-key-open">üîì</i> Change Passwords</a></li>
                    <li><a href="/userdeleteprofile"><i class="ph-trash">üóëÔ∏è</i> Delete Profile</a></li>
                    <li><a href="/home"><i class="ph-sign-out">üö™</i> Log Out</a></li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-content">
            <div class="content-header">
                <button class="sidebar-toggle"><i class="ph-squares-four"></i> Menu</button>
                <h1>My Applied</h1>
            </div>

            <div class="applied-jobs-container">
                <div class="jobs-filter">
                    <form class="search-form">
                        <input type="text" onkeyup="search()" id="" placeholder="Search by keyword">
                        <button type="submit"><i class="ph-magnifying-glass"></i></button>
                    </form>

                    <div class="sort-dropdown">
                        <select>
                            <option>Sort by (default)</option>
                            <option>Title (A ‚Üí Z)</option>
                            <option>Title (Z ‚Üí A)</option>
                            <option>Date (newest)</option>
                            <option>Date (oldest)</option>
                            <option>Cost (high to low)</option>
                            <option>Cost (low to high)</option>
                        </select>
                    </div>
                </div>

                <div class="jobs-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Date Applied</th>
                                <th>Salary Range</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% applications.forEach(function(app) { %>
                                <tr>
                                    <td>
                                        <a href="/jobdetailedit/<%= app.job.id %>" class="job-title">
                                            <%= app.job.title %>
                                        </a>
                                        <div class="job-meta">
                                            <a href="#" class="company">
                                                <img src="<%= app.job.company.logo %>" alt="Company Logo">
                                                <%= app.job.company.name %>
                                            </a>
                                            <span class="location">
                                                <i class="ph-map-pin"></i>
                                                <%= app.job.location %>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <%= app.createdAt ? app.createdAt.getDate() + '-' + (app.createdAt.getMonth() +
                                            1) + '-' + app.createdAt.getFullYear() : '' %>
                                    </td>
                                    <td>
                                        <%= app.job.min_salary %> LE - <%= app.job.max_salary %> LE
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <!--                 
                <div class="jobs-footer">
                    <div class="pagination">
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#">></a>
                    </div>
                    <div class="showing-info">
                        Showing 1 to 4 of 16 entries
                    </div>
                </div> -->
            </div>

        </main>
    </div>
    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <button class="close-menu"><i class="ph-x"></i></button>
        <div class="mobile-menu-content">
            <!-- Mobile menu content would go here -->
        </div>
    </div>

    <script src="/js/user-applied.js"></script>
</body>

</html>