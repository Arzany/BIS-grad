    <link rel="shortcut icon" href="/images/fav.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/user-change-password.css">
</head>

<body>

    <div class="dashboard-container">
        <!-- Header -->
        <header class="header">
            <div class="header-container">
                <div class="logo">
                    <a href="index.html">
                        <img src="/images/logoforallpages.png" alt="FreelanHub Logo">
                    </a>
                </div>
                <nav class="main-nav">
                    <ul>
                        <li><a href="/home">Home</a></li>
                        <li><a href="/awareness">For you</a></li>
                        <li><a href="/price">Payment</a></li>
                    </ul>
                </nav>
                <a href="/companyprofile">
                    <div class="user-menu">
                        <div class="user-avatar">
                            <img src="/company-logos/<%= company.logo %>" alt="company logo">
                        </div>
                        <span calss="marina">
                            <%= company.name %>
                        </span>
                        <i class="ph ph-caret-down"></i>
                    </div>
                </a>
            </div>
        </header>
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-inner">
                <div class="sidebar-section">
                    <h4 class="sidebar-title">Management</h4>
                    <ul class="sidebar-menu">

                        <li><a href="/companyjobs"><i class="icon">üíº</i> My Jobs</a></li>
                        <li><a href="/companysubmitjob"><i class="icon">üìù</i> Submit jobs</a></li>
                    </ul>
                </div>

                <div class="sidebar-section">
                    <h4 class="sidebar-title">User</h4>
                    <ul class="sidebar-menu">
                        <li><a href="/companyprofile"><i class="icon">üë§</i> My Profile</a></li>
                        <li><a href="/companyprofilesett"><i class="icon">‚öôÔ∏è</i>Edit Profile</a></li>
                        <li class="active"><a href="/companychangepass"><i class="icon">üîì</i> Change Password</a></li>
                        <li><a href="/companydeleteprofile"><i class="icon">üóëÔ∏è</i> Delete Profile</a></li>
                        <li><a href="/home"><i class="icon">üö™</i> Log Out</a></li>
                    </ul>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-header">
                <button class="mobile-menu-btn">‚ò∞ Menu</button>
                <h1>Change Password</h1>
            </div>

            <form class="password-form" id="passwordForm">
                <div class="form-group">
                    <label for="email">Your Email: <span class="required">*</span></label>
                    <input type="email" id="email" placeholder="Ex: martinaayman@gmail.com" required>
                </div>

                <div class="form-group">
                    <label for="old-password">Old Password: <span class="required">*</span></label>
                    <input type="password" id="old-password" required>
                </div>

                <div class="form-group">
                    <label for="new-password">New Password: <span class="required">*</span></label>
                    <input type="password" id="new-password" required>
                </div>

                <div class="form-group">
                    <label for="confirm-password">Confirm New Password: <span class="required">*</span></label>
                    <input type="password" id="confirm-password" required>
                </div>

                <button type="button" class="btn-change-password">Change Password</button>
            </form>
        </main>
    </div>

    <!-- Verification Modal -->
    <div class="modal" id="verification-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Verify your email address</h3>
                <button class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>We have sent a verification link to <span class="email-highlight">avitex*****@gmaiil.com</span>.
                    Click on the link to complete the verification process.</p>
                <p class="note">*You might need to check your spam folder.*</p>
                <div class="modal-actions">
                    <button class="btn-resend">Resend Email</button>
                    <a href="/home">
                        <button class="btn-return">Return to homepage</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/user-change-pass.js"></script>
</body>

</html>