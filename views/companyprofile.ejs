<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Profile</title>
    <link rel="shortcut icon" href="/images/fav.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/company.profile.css">
</head>

<body class="dashboard-page">
    <!-- Header -->
    <header class="dashboard-header">
        <div class="header-container">
            <div class="logo">
                <a href="index.html">
                    <img src="/images/logoforallpages.png" alt="EqualChance Logo">
                </a>
            </div>

            <nav class="main-nav">
                <ul>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/awareness">For you</a></li>
                    <li><a href="/price">Payment</a></li>

                </ul>
            </nav>

            <div class="user-menu">
                <div class="user-avatar">
                    <img src="/cv/<%= company.logo %>" alt="company logo">
                </div>
                <span>
                    <%= company.name %>
                </span>
            </div>
        </div>
    </header>

    <!-- Dashboard Main Content -->
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-menu">
                <h4>Management</h4>
                <ul>

                    <li><a href="/companyjobs"><i class="ph ph-gavel">üíº</i> MY Jobs</a></li>
                    <li><a href="/companysubmitjob"><i class="ph ph-gavel">üìù</i> Submit Jobs</a></li>
                </ul>

                <h4>Account</h4>
                <ul>
                    <li class="active"><a href="/companyprofile"><i class="ph ph-user-circle">üë§</i> My Profile</a></li>
                    <li><a href="/companyprofilesett"><i class="ph ph-gear">‚öôÔ∏è</i>Edit Profile</a></li>
                    <li><a href="/companychangepass"><i class="ph ph-gear">üîì</i>Change Password</a></li>
                    <li><a href="/companydeleteprofile"><i class="ph ph-gear">üóëÔ∏è</i>Delete Profile</a></li>
                    <li><a href="/home"><i class="ph ph-sign-out">üö™</i> Logout</a></li>
                </ul>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-content">
            <div class="profile-header">
                <h2>My Profile</h2>
                <a href="/companyprofilesett" class="btn-primary">Edit Profile</a>
            </div>

            <div class="profile-content">
                <!-- Left Column -->
                <div class="profile-left">
                    <div class="info-card">
                        <h3>Company Info</h3>
                        <div class="company-map">
                            <ul class="company-info">
                                <li><span>Website:</span>
                                    <%= company.website %>
                                </li>
                                <li><span>Email:</span>
                                    <%= company.email %>
                                </li>
                                <li><span>Categories:</span>
                                    <%= company.categories %>
                                </li>
                                <li><span>Address:</span>
                                    <%= company.address %>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="profile-right">
                        <div class="about-card">
                            <h3>About Us</h3>
                            <p>
                                <%= company.description %>
                            </p>
                        </div>

                        <div class="jobs-card">
                            <h3>Our Jobs</h3>
                            <div class="job-listing">
                                <% jobs.forEach(function(job) { %>
                                    <a href="/job-details/<%= job.id %>" class="job-link">
                                        <div class="job-item" style="padding: 1rem;">
                                            <div class="job-header">
                                                <img src="/images/<%= job.logo || 'default.jpg' %>"
                                                    alt="<%= company.name %> Logo">
                                                <div>
                                                    <h4>
                                                        <%= job.title %>
                                                    </h4>
                                                    <div class="job-meta">
                                                        <span><i class="ph ph-map-pin"></i>
                                                            <%= job.location || '' %>
                                                        </span>
                                                        <span>
                                                            <i class="ph ph-calendar-blank"></i>
                                                            <%= job.createdAt ?
                                                                job.createdAt.getDate().toString().padStart(2, '0' )
                                                                + ' ' + job.createdAt.toLocaleString('en-US', {
                                                                month: 'short' }) + ' ' + job.createdAt.getFullYear()
                                                                : '' %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="job-footer">
                                                <div class="job-tags">
                                                    <span>
                                                        <%= job.type || '' %>
                                                    </span>
                                                    <% if (job.salary_period) { %>
                                                        <span>
                                                            <%= job.salary_period %>
                                                        </span>
                                                        <% } %>
                                                            <% if (job.min_salary || job.max_salary) { %>
                                                                <span>
                                                                    <%= job.min_salary %>EGP - <%= job.max_salary %>EGP
                                                                </span>
                                                                <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                    <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
        </main>
    </div>

    <script src="/js/company-profile.js"></script>
</body>

</html>