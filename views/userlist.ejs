<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <link rel="shortcut icon" href="/images/fav.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/user-list.css">
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="header-inner">
            <div class="logo">
                <img src="/images/logoforallpages.png">
            </div>

            <div class="navigator">
                <ul class="nav-list">
                    <li><a href="/admindashboard">admin dashboard</a></li>
                    <li><a href="/awareness">Awareness</a></li>
                    <li><a href="/userlist">Applicants List</a></li>
                    <li><a href="/companylist">Companies List</a></li>
                </ul>
            </div>
            <a href="/companyprofile">
                <div class="user-actions">
                    <div class="user-profile">
                        <img src="/images/com. logo/mercedese.jpg" alt="Company's logo">
                        <span>MCV</span>
                    </div>
                </div>
            </a>
            <button class="mobile-menu-btn">â˜°</button>
        </div>
    </header>

    <!-- Breadcrumb -->
    <section class="breadcrumb">
        <div class="breadcrumb-bg"></div>
        <div class="breadcrumb-inner">
            <div class="breadcrumb-content">
                <h1>Users List</h1>
                <form class="search-form" id="searchForm">
                    <div class="search-input">
                        <input type="text" id="searchInput" placeholder="Job title, key words or company">
                    </div>
                    <button type="submit" class="btn-primary">Search</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Candidates List -->
    <div class="candidates-container">
        <div class="candidates-filters">
            <div class="sort-options">
                <span>Sort by:</span>
                <select id="sortSelect">
                    <option value="default">Default</option>
                    <option value="newest">Newest</option>
                    <option value="oldest">Oldest</option>
                    <option value="rating">Highest Rating</option>
                    <option value="name-asc">Name (A-Z)</option>
                    <option value="name-desc">Name (Z-A)</option>
                </select>
            </div>
        </div>
        <!-- <div class="filter-tags">
            <span id="resultsCount">5 Results</span>
        </div> -->

        <div class="candidates-list" id="candidatesList">
            <!-- Candidate 1 -->
            <div class="candidates-list" id="candidatesList">
                <% applicants.forEach(function(applicant) { %>
                    <div class="candidate-item" data-name="<%= applicant.name %>"
                        data-title="<%= applicant.jobTitle || '' %>" data-company="<%= applicant.companyName || '' %>"
                        data-date="<%= applicant.createdAt ? applicant.createdAt.toISOString().slice(0,10) : '' %>">
                        <div class="candidate-info">
                            <img src="/images/<%= applicant.logo || 'default.jpg' %>" alt="<%= applicant.name %>">
                                <div class="candidate-details">
                                    <h3>
                                        <%= applicant.name %>
                                    </h3>
                                    <span class="location">
                                        <%= applicant.phone || '' %>
                                    </span>
                                    <div class="candidate-tags">
                                        <% if (applicant.disability_type) { %>
                                            <span>
                                                <%= applicant.disability_type %>
                                            </span>
                                            <% } %>
                                                <% if (applicant.major) { %>
                                                    <span>
                                                        <%= applicant.major %>
                                                    </span>
                                                    <% } %>
                                                        <% if (applicant.education) { %>
                                                            <span>
                                                                <%= applicant.education %>
                                                            </span>
                                                            <% } %>
                                    </div>
                                </div>
                        </div>
                        <!-- <div class="profile-action">
                            <a href="/user-profile/<%= applicant.id %>">
                                <button class="view-profile">View Profile</button>
                            </a>
                        </div> -->
                    </div>
                    <% }); %>
            </div>

        </div>

        <!-- <div class="pagination">
            <button class="active">1</button>
            <button>2</button>
            <button>3</button>
            <button>></button>
        </div> -->
    </div>

    <script src="/js/users-list.js"></script>
</body>

</html>